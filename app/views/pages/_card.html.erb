<div class="col-xs-12 col-sm-4">

  <%= link_to listing_path(listing) do %>

  <div class="card" style="background: linear-gradient(rgba(0,0,0,0.0), rgba(0,0,0,0.0)), url('<%= cl_image_path listing.photo, height: 300, width: 400, crop: :fill %>')">
  <% if listing.profile.user.facebook_picture_url.nil? %>
      <%= cl_image_tag 'user_gqomus', class: "card-user avatar avatar-large" %>
    <% else %>
      <%= image_tag listing.profile.user.facebook_picture_url, class: "card-user avatar avatar-large" %>
    <% end %>
  </div>

  <div class="card-category">
      <strong>â‚¬<%= listing.price%></strong>
      <%= listing.name %>
    </div>
    <div class="card-description">
      <%= listing.description %>
    </div>


  <% end %>
</div>














