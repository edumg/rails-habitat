<div id="date_picker">
<%= simple_form_for [@listing, @booking] do |f| %>
  <br>
  <br>
  <div class="row">

    <div class="col-md-6">
    <%= f.input :start_date, as: :string, input_html: {class: "datepicker", value: @booking.start_date.strftime("%d/%m/%Y")} %>

    <%= f.input :end_date, as: :string, input_html: {class: "datepicker", value: @booking.end_date.strftime("%d/%m/%Y")} %>
    </div>
  </div>





  <br>
  <h3 class="total-price">Total Price:</h3>
  <p id="price">
    <%= humanized_money_with_symbol(@listing.price * 6)  %>

  </p>
  <br>
  <br>
  <br>
  <%= f.submit "Confirm Booking request", class: "btn btn-primary banner-button" %>
<% end %>
</div>
