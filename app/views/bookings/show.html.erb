<% content_for(:title_tag) do %>
Show Booking
<% end %>


  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @booking.listing.photo, height: 300, width: 400, crop: :fill %>');">

   <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <div class="text-center">
          <h1> <%= @booking.id %> </h1>

          <p>Listing name: <%= @booking.listing.name %> </p>
          <p>Host name: <%= @booking.listing.profile.first_name %> <%= @booking.listing.profile.last_name %> </p>
          <p>Status: <%= @booking.status %> </p>
          <p>Start Date: <%= @booking.start_date %> </p>
          <p>End Date: <%= @booking.end_date %> </p>
          <p>Num guests: <%= @booking.num_guests %> </p>
          <p>Minimum Stay: <%= @booking.minimum_stay %> </p>
          <p>Cost (cents): <%= @booking.listing.type_place %> </p>
          <p>number of rooms: <%= @booking.rent_cost_cents %> </p>

          <% if current_user === @booking.profile_id %>
            <%= link_to edit_booking_path do %>
              <i class="fa fa-pencil-square-o fa-3x"></i>
            <% end %>

            <%= link_to booking_path(@booking), method: :delete  do %>
              <i class="fa fa-trash fa-3x"></i>
            <% end %>
          <% end %>

         <!--  <#%= link_to new_booking_questionnaire_path(@booking.id) do %>
            <h4>Create Personality Test</h4>
          <#% end %>
 -->
          <% if @booking.status == "PAYMENT" %>
            <%= link_to root_path do %>
              <div class="btn btn-primary">
                Make the payment
              </div>
            <% end %>
          <% end %>

          <% if @booking.status == "CONTRACT" %>
            <%= link_to new_payment_path(@booking) do %>
               <div class="btn btn-primary">
                Sign the contract
              </div>
            <% end %>
          <% end %>

   <!--        <#%= link_to new_booking_booking_path(@booking), controller: "booking", action: "verify" do %>
            <i class="fa fa-book fa-5x"></i>
          <#% end %> -->

          <br>
          <br>
          <br>

          <%= link_to @back_url  do %>
            <div class="btn btn-primary">
              Back
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flat_coordinates.to_json %>;
      alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
