<div class="container text-center">
  <div id="booking-title">
    <h1>Your booking request:</h1>
  </div>

  <div class="booking-details">
    <p><strong>You have booked </strong><%= @booking.listing.name %></p>
    <p><strong>From </strong><%= @booking.start_date %>
    <strong> until </strong><%= @booking.end_date %></p>
    <p><strong>at </strong><%= @booking.listing.location %></p>
    <br>
    <p>This request will become a live booking once the listing owner confirms the availability.</p>
  </div>
  <div class="confirm-buttons">
    <%= link_to 'Go back', bookings_path, { class: "button-link btn btn-secondary"} %>
    <br>
    <%= link_to 'Confirm your request', root_path, { class: "button-link btn btn-danger"} %>
  </div>
</div>
